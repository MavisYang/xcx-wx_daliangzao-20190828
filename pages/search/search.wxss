/* search.wxss */
page{
  background-color: #fff;
}
.header{
  display: flex;
  flex-direction: row;
  height:104rpx;
  background-color:#1a1d1f;
  align-items: center;
}
.header_logo{
  width:126rpx;
  height:39rpx;
  margin-left:30rpx;
}
.header_search_wrap{
  padding:0 0 0 36rpx;
}
.header_search{
  width:530rpx;
  height:64rpx;
  border-radius:30rpx;
  color:#fff;
  background-color:#282c2f;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left:20rpx;
}
.header_search input{
  width: 480rpx;
  color:#fff;
}
.header_search_icon{
  display: block;
  width:28rpx;
  height:28rpx;
  margin-right:12rpx;
}
.header_search_placeholder{
  color:#969696;
  font-size: 22rpx;
}

.header_nav_wrap{
  width:100%;
  height:78rpx;
  color:#fff;
  background-color:#131617;
  /* overflow:hidden; */
}
.header_nav{
  white-space: nowrap; 
  display: flex;
}
.header_nav_each{
  height:42rpx;
  font-size: 28rpx;
  line-height:42rpx;
  padding: 0 20rpx;
  display: inline-block;
  margin:18rpx 20rpx;
  border:1px solid #131617;
}
.header_nav_active{
  border:1px solid #fff;
  border-radius: 20rpx;
}
.cancel_btn{
  flex: 1;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}
.search_btn{
  
}
.search_msg{
  padding:44rpx 0 0 40rpx;
}
.search_msg_img,.search_msg_title{
  display:block;
  float: left;
}
.search_msg_img{
  width: 22rpx;
  height: 28rpx;
  margin-right: 14rpx;
}
.search_msg_img image{
  display: block;
  width: 22rpx;
  height: 28rpx;
  margin-top: 3rpx;
}
.search_msg_title{
  font-size: 24rpx;
  color:#242424;
}
.search_content{
  padding:30rpx 0 0  40rpx;
}
.each_word{
  display: inline-block;
  font-size: 24rpx;
  color:#b4a078;
  background-color: #f9f9f9;
  padding:9rpx 20rpx;
  border:1rpx solid #b4a078;
  border-radius: 20px;
  margin:0 30rpx 30rpx 0; 
}
.each_word_active{
  color:#fff;
  background-color: #b4a078;
}
/* logo */
.logo_title_space{
  width: 100%;
  height: 18rpx;
  background-color: #eee;
}
.logo_list{
  padding: 20rpx 0;
  background-color: #fff;
}
.logo_nav{
  display: block;
  float: left;
  width: 25%;
}
.logo_img{
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin:20rpx auto;
}
.list_title{
  padding: 44rpx 0 10rpx 32rpx;
  font-size: 24rpx;
  color: #242424;
}