/* pages/bindingPhone/bindingPhone.wxss */
/* 绑定手机号   */
.photo_wrap{
	width:100%;
	height:100%;
	position:fixed;
	top:0;
	left:0;
	z-index:999999;
	overflow:hidden;
}
.dingzhi_bg{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
}
.dingzhi_logo{
	display:block;
	width:190rpx;
	height:180rpx;
	margin:100rpx auto 50rpx;
}
.photo_cont{
	position:relative;
	z-index:1;
}
.each_photo_cont{
	margin:0 auto 34rpx ;
}
.each_photo_ipt{
	display:block;
	width:568rpx;
	height:90rpx;
	font-size:24rpx;
	color:#969696;
	padding:0 0 0 20rpx;
	background-color:#fcfcfc;
	border:1px solid #ddd;
	margin:0 auto;
}
.photo_have{
	width:588rpx;
	margin:0 auto 32rpx;
}
.each_photo_short_ipt{
	float:left;
	display:block;
	width:246rpx;
	height:90rpx;
	font-size:24rpx;
	color:#969696;
	/* text-align:center; */
  border:1px solid #ddd;
  padding:0 0 0 20rpx;
  background-color: #fff;
}
/* 验证码   */
.huo_qu_ma ,.code{
  float: right;
  width: 218rpx;
  height: 90rpx;
  font-size:24rpx;
  background-color: #b4a078;
  color: #fff;
  text-align: center;
  border: none;
  line-height: 90rpx;  
}
.phone_line_wrap{
	position:relative;
	width:450rpx;
	margin:100rpx auto 0;
}
.phone_line,.phone_line_title{
	float:left;
}
.phone_line{
  width:90rpx;
  height:10rpx;
  border-bottom:2px solid #979391;
  box-sizing:border-box;
  -moz-box-sizing:border-box; /* Firefox */
  -webkit-box-sizing:border-box; /* Safari */
}
.phone_line_title{
	width:270rpx;
	height:22rpx;
	font-size:22rpx;
	text-align:center;
	color:#afafaf;
	line-height:1;
}

.phone_btn{
  display:block;
  width:560rpx;
  height:100rpx;
  font-size:30rpx;
  line-height:100rpx;
  text-align:center;
  color:#fff;
  background-color:#b4a078;
  margin:40rpx auto 0;
  cursor:pointer;
}
/* 跳过 */
.back_pay{
  font-size: 24rpx;
  line-height: 100rpx;
  text-align: center;
  text-decoration: underline;
  color: #afafaf;
}