  min-height: 100vh;
  background-color: #fff;
}
.main_content{
  display: block;
  width: 82%;
  margin: 126rpx auto 0;
}
.icon_img{
  display: block;
  width: 158rpx;
  height: 158rpx;
  margin: 0 auto;
}
.icon_name{
  font-size: 38rpx;
  font-weight: bold;
  line-height: 86rpx;
