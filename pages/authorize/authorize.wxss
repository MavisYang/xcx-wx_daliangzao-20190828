}
.icon_line{
  width:100%;
  height: 34px;
  border-bottom: 1px solid #f4f4f4;
}
.authorize_msg_title{
  padding: 54rpx 0 38rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}
.authorize_msg_cont{
  font-size: 28rpx;
  color: #676767;
}
.authorize_btn{
  height: 86rpx;
  line-height: 86rpx;
