/* coupon.wxss */
.container{
  text-align: center;
  margin-top:45rpx;
}
.coupon_wrap{
  display: block;
  width: 610rpx;
  padding: 0  40rpx;
  margin:0 auto 20rpx;
  background-color: #fff;
}
.coupon_title_wrap{
  position: relative
}
.coupon_title{
  text-align: left;
  line-height: 110rpx;
  color: #b4a078;
  font-size: 78rpx;
  padding: 16rpx 0 0 0;
}
.use_state{
  width: 116rpx;
  height: 46rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  position: absolute;
  top:50%;
  right: 0;
  margin-top:-15rpx;
  /* border-radius: 6rpx; */
}
.use_state_0{
  color: #b4a078;
  border: 1rpx solid #b4a078;
}
.use_state_1{
  color: #c8c8c8;
  border: 1rpx solid #c8c8c8;
}
.coupon_line image{
  width: 615rpx;
  height: 30rpx;
}
.coupon_infor_left,.coupon_rule{
  float: left;
  font-size: 24rpx;
  line-height: 44rpx;
  color:#222;
  padding:0 0 12rpx 0;
}
.coupon_rule{
  float: right;
}
/*  已过期 */
.coupon_wrap_2 view{
  color:#c8c8c8;
}
.use_state_2{
  width: 83rpx;
  height: 83rpx;
  right: 14rpx;
  margin-top:-33rpx;
}
.use_state_2 image{
  width: 100%;
  height: 100%;
}
.modal_wrap{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal{
  font-size: 28rpx;
  color:#fff;
  padding:15rpx 20rpx;
  background-color: rgba(0,0,0,0.6);
}
.hidden{
   display: none; 
}