/* pages/girslDayInfo/girlsDayInfo.wxss */
.container{
  background-color: #fff;
}
.girlsday_info_top{
  display: block;
  width: 100%;
}
.girlsday_info_title_1{
  display: block;
  width: 298rpx;
  margin: 0 auto;
}
.goods_wrap_1{
  width: 640rpx;
  height: 290rpx;
  border: 2px solid #f2bccb;
  border-radius: 6px;
  margin: 10rpx auto;
  position: relative;
  background-color: #fff;
}
.girlsday_info_goods_1{
  float: left;
  width: 300rpx;
}
.girlsday_info_goods_right{
  float: left;
  width: 310rpx;
}
.goods_name{
  font-size: 20rpx;
  color: #000;
  padding: 43rpx 0 18rpx;
}
.goods_lod_price{
  display: block;
  font-size: 20rpx;
  color: #898989;
  padding:0 0 10rpx 0;
  text-decoration: line-through;
}
.goods_new_price{
  font-size: 20rpx;
  font-weight: bold;
  color: #e05e81;
}
.goods_new_price_num{
  font-size: 30rpx;
}
.buy_btn{
  width: 170rpx;
  height: 46rpx;
  font-size: 26rpx;
  line-height: 46rpx;
  text-align: center;
  color: #fff;
  background-color: #fea89d;
  cursor: pointer;
  border-radius: 20px;
  margin: 36rpx 0 0 0;
}
.goods_1_right{
  width: 150rpx;
  height: 126rpx;
  position: absolute;
  top: 190rpx;
  right: -54rpx;
  z-index: 1;
}

/* each */
.goods_each_wrap{
  display: block;
  margin: 0 auto;
  text-align: center;
  font-size: 0px;
}
.goods_each_cont{
   display: inline-block;
   font-size: 0;
}
.goods_each{
  display: block;
  float: left;
  width: 196rpx;
  border: 2px solid #f4c8d4;
  border-radius:6px; 
  margin: 24rpx 10rpx 50rpx;
  padding: 0 0 20rpx 0;
  background-color: #fff;
}
.goods_each_img{
  display: block;
  width: 196rpx;
  height: 194rpx;
}
.goods_each_title{
  width: 170rpx;
  height: 44rpx;
  font-size: 16rpx;
  line-height: 22rpx;
  color: #000;
  text-align: center;
  margin: 0 auto 6rpx;
}
.goods_each_price{
  font-size: 16rpx;
  color: #fda599;
  text-align: center;
}
.goods_each_price_num{
  font-size: 20rpx;
  font-weight: bold;
}
/* footer goods */
.goods_footer_wrap{
  position: relative;
}
.goods_wrap_2{
  border: 2px solid #fff;
}
.goods_footer_bg{
  display: block;
  width: 100%;
  height: 840rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.goods_footer_cont{
  position: relative;
  z-index: 2;
}
.goods_each_2{
  border: 2px solid #fff;
}
.goods_new_price_2{
  color: #fda69b;
}
.goods_name_2{
  padding: 43rpx 0  18rpx;
}