/**index.wxss**/
.container {
  overflow-x: hidden;
  background-color: #fff;
  font-family:"Microsoft Yahei",Tahoma,Arial,Helvetica,STHeiti;
}
.userinfo {
  height: 436rpx;
  background-color:#c4ac74 ; 
  border-bottom: 1px solid #b4a078;
}
.userinfo-avatar {
  display: block;
  width: 154rpx;
  height: 154rpx;
  /* border:7rpx solid #b19c77; */
  border:7rpx solid #b7a277; 
  border-radius: 50%;
  margin: 60rpx auto 22rpx;
}
.userinfo-nickname {
  font-size: 30rpx;
  color: #fff;
  text-align: center;
}
/* 按钮 */
.header_btn_wrap{
  float: left;
  position: relative;
  left: 50%;
}
.header_brn_each{
  float: left;
  display: block;
  width: 270rpx;
  height: 58rpx;
  font-size: 30rpx;
  line-height: 58rpx;
  color: #fff;
  text-align: center;
  position: relative;
  right: 50%;
  border: 1px solid #efeeec;
  margin: 50rpx 46rpx 0;
}

.cont_btn_each{
  display: block;
  float: left;
  width: 33.33%;
  height: 334rpx;
  text-align: center;
  border-bottom:1px solid #b4a078; 
  box-sizing: border-box;
  position: relative;
}
.cont_btn_each_left{
  border-right:1px solid #b4a078; 
}
.btn_each_cont{
  margin:90rpx auto 0;
}
.mine_each_icon{
  display: block;
  width: 112rpx;
  height: 110rpx;
  margin: 0 auto;
}
.mine_each_name{
  font-size: 30rpx;
  color: #5a5a5a;
  text-align: center;
  padding-top: 34rpx;
}
/* 客服 */
button.service_btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  border: 0px none;
}
.mine_each_service{
  font-size: 20rpx;
  color: #969696;
  text-align: center;
}
.service_tel{
  font-size: 28rpx;
  line-height: 100rpx;
  color: #5a5a5a;
  text-align: center;
}
.no_border{
  border:0px none;
}
/* 特殊入口 */
.only_exit{
  display: block;
  width: 400rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  background-color: #b4a078;
  margin: 50rpx auto;
  border-radius: 4px;
}
/* 商务标识 */
.user_business_icon{
  display: block;
  width: 200rpx;
  height: 38rpx;
  margin: 20rpx auto 0;
}